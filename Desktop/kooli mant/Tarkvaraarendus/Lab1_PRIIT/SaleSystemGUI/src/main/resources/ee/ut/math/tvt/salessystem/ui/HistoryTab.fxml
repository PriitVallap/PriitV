<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.DatePicker?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="175.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <AnchorPane>
                <GridPane layoutX="100.0" layoutY="10.0" prefHeight="110.0" prefWidth="400.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="30.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                        <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                        <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                        <RowConstraints minHeight="25.0" prefHeight="25.0"/>
                    </rowConstraints>
                    <children>
                        <DatePicker fx:id="startDate" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <DatePicker fx:id="endDate" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Label text="Start date" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="End date" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Button minWidth="150" text="Show between dates" GridPane.rowIndex="0"
                                GridPane.columnIndex="0"/>
                        <Button minWidth="150" text="Show last 10" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Button minWidth="150" text="Show all" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Button fx:id="showBetweenDates" minWidth="150" onAction="#showBetweenDatesButtonClicked"
                                text="Show between dates" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Button fx:id="showLast10" minWidth="150" onAction="#showLast10ButtonClicked"
                                text="Show last 10" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Button fx:id="showAll" minWidth="150" onAction="#showAllButtonClicked" text="Show all"
                                GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    </children>
                </GridPane>
                <TitledPane alignment="CENTER" animated="false" collapsible="false" contentDisplay="BOTTOM"
                            text="Purchase history" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="115.0">
                    <content>
                        <TableView fx:id="historyView" prefHeight="175" prefWidth="400" styleClass="blue_style"
                                   BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="date" text="Date">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="time" text="Time">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="sum" text="Total">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id"/>
                                    </cellValueFactory>
                                </TableColumn>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>

                            </TableView>
                    </content>
                </TitledPane>
                <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="275.0" minWidth="600">
                    <children>
                        <TableView fx:id="HistoryTableView" styleClass="blue_style"
                                   BorderPane.alignment="CENTER" minWidth="600">
                            <columns>
                                <TableColumn fx:id="contentId" text="Id">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="contentName" text="Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="name"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="contentPrice" text="Price">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="price"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="contentQuantity" text="Quantity">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="quantity"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="contentSum" text="Sum">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="sum"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>
