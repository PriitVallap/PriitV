<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <AnchorPane prefHeight="200.0" styleClass="background_style" SplitPane.resizableWithParent="false">
                <children>
                    <GridPane layoutX="100.0" layoutY="10.0" prefHeight="123.0" prefWidth="316.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label text="Bar Code:"/>
                            <Label text="Name:"
                                   GridPane.rowIndex="1"/>
                            <Label text="Price:"
                                   GridPane.rowIndex="2"/>
                            <Label text="Quantity:"
                                   GridPane.rowIndex="3"/>
                            <Button fx:id="addProductButton" alignment="CENTER" mnemonicParsing="false" onAction="#addProductButtonClicked" text="Add product"
                                    GridPane.Halignment="CENTER" GridPane.Valignment="CENTER" GridPane.columnIndex="2"
                                    GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.rowSpan="2"/>
                            <TextField fx:id="barCodeFieldWH" GridPane.columnIndex="1"/>
                            <TextField fx:id="nameFieldWH" layoutX="70.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            <TextField fx:id="priceFieldWH" layoutX="70.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            <TextField fx:id="quantityFieldWH" layoutX="72.0" layoutY="20.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>


                        </children>
                    </GridPane>
                </children>
            </AnchorPane>
            <AnchorPane>
                    <TitledPane alignment="CENTER" animated="false" collapsible="false" prefHeight="500.0"
                                prefWidth="345.0" text="Warehouse status" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <BorderPane>
                            <center>
                                <TableView fx:id="warehouseTableView" styleClass="blue_style">
                                    <columns>
                                        <TableColumn text="Id">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="id"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Name">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="name"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Price">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="price"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Quantity">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="quantity"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </center>
                            <top>
                                <Button onMouseClicked="#refreshButtonClicked" text="Refresh warehouse"
                                        BorderPane.alignment="TOP_LEFT"/>
                            </top>
                        </BorderPane>
                    </TitledPane>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>
